<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="#d9d9d9">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/delivery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073"></ImageView>

    <EditText
        android:id="@+id/uemail"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:textColor="#284b63"
        android:drawableTint="#284b63"
        android:hint="Enter email:"
        android:fontFamily="@font/bebasneueregular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383"></EditText>


    <EditText
        android:id="@+id/pass"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:textColor="#284b63"
        android:drawableTint="#284b63"
        android:fontFamily="@font/bebasneueregular"
        android:hint="Enter password:"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"></EditText>

    <Button
        android:id="@+id/lsignin"
        android:layout_width="122dp"
        android:layout_height="61dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="#3c6e71"
        android:text="Sign In"
        android:fontFamily="@font/bebasneueregular"
        android:textColor="#E0E0E0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        app:layout_constraintVertical_bias="0.152"></Button>

    <Button
        android:id="@+id/signin"
        android:layout_width="254dp"
        android:layout_height="61dp"
        android:backgroundTint="#ECEFF1"
        android:drawableLeft="@drawable/google"
        android:drawablePadding="10dp"
        android:text="Google Sign in"
        android:textColor="#284b63"
        android:fontFamily="@font/bebasneueregular"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867"
        tools:ignore="MissingConstraints"></Button>

    <TextView
        android:id="@+id/etReg"
        android:layout_width="254dp"
        android:layout_height="61dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="New here? Sign up!"
        android:textColor="#284b63"
        android:textSize="25dp"
        android:fontFamily="@font/bebasneueregular"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707"></TextView>



</androidx.constraintlayout.widget.ConstraintLayout>